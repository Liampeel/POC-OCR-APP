<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.FireBaseOCRActivity">


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="401dp"
        android:layout_height="319dp" />

            <TextView
                android:id="@+id/text_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view"
                android:layout_margin="10dp"
                android:maxLines="10"
                android:text=" text"
                android:textSize="20dp" />

            <Button
                android:id="@+id/capture_image_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_above="@+id/detect_text_image_btn"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:text="Capture Image"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17dp" />

            <Button
                android:id="@+id/greyscale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_above="@+id/capture_image_btn"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="Greyscale"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17dp" />

            <Button
                android:id="@+id/detect_text_image_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:text="Detect Text"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17dp" />



</RelativeLayout>