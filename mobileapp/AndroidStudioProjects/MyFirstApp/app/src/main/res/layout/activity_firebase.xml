<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_start"
    tools:context=".activities.FireBaseOCRActivity">


    <ImageButton
        android:id="@+id/homeButton2"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:background="?android:attr/panelBackground"
        app:srcCompat="@drawable/homeicon" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_below="@id/capture_image_btn"

        android:layout_height="319dp" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:maxLines="10"
        android:text="@string/firebaseInfo"
        android:layout_below="@id/capture_image_btn"
        android:gravity="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textInfo2"
        android:layout_width="wrap_content"
        android:layout_height="127dp"
        android:layout_below="@id/textInfo"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:maxLines="10"
        android:text="@string/firebaseInfo2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/capture_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@id/homeButton2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="@string/capture_image"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp" />



    <Button
        android:id="@+id/detect_text_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="@string/confirm"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:visibility="invisible"
        android:textSize="17dp" />



</RelativeLayout>