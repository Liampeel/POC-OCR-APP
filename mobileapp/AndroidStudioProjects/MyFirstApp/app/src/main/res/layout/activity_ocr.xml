<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_start"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    tools:context=".activities.OCR.OCR_Activity">

    <Button
        android:id="@+id/capture_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"

        android:textAllCaps="false"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/detect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detect"
        android:layout_below="@+id/capture_image_btn"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"/>



    <ImageView
        android:id="@+id/imageIv"
        android:layout_width="match_parent"
        android:layout_below="@id/detect"
        android:layout_margin="10dp"
        android:maxLines="10"

        android:layout_height="300dp"/>

    <EditText
        android:id="@+id/resultEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:layout_below="@id/imageIv"

        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text=""
        android:textSize="26dp"
        android:layout_below="@id/resultEt"
        android:layout_margin="10dp"/>



    <TextView
        android:id="@+id/textPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Preview"
        android:layout_below="@id/capture_image_btn"

        android:textColor="#000"
        android:textSize="20sp" />










</RelativeLayout>